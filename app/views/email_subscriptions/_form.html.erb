<%= form_tag("/email_subscriptions/create", method: "post", class: "form-inline subscriber-form") do %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
      <% if flash[:status] %>
        <div class="alert alert-<%- if flash[:status] == 'error' %>danger<% else %>success<% end %>">
          <%= flash[:message] %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 text-center">
      <div class="form-group" style="width:100%;">
        <div class="input-group" style="width:100%;">
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter your email address", required: true, autocomplete: "off" %>
          <div class="input-group-addon">
            <button type="submit" class="subscribe-btn">
              Subscribe <i class="fa fa-long-arrow-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- end %>